%Defining variables
T = 0:300000;
k = 8.617*10^-5;

%Defining the function
Z=@(T) 1+exp(-2./(k*T));

%Reading out the numerical values
Z_1 = Z(300)
Z_2 = Z(3000)
Z_3 = Z(30000)
Z_4 = Z(300000)

%Plotting
plot(T,Z(T))
title('Partition function Z(T) = 1+e^{-2eV/kT}')
xlabel('Temperature')
ylabel('Z')
axis([0 T(end) 0 2])
